{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {   
      "lbSettings": {
        "type": "object"
      },
      "loadBalancerInboundNatRuleNamePrefix": {
        "type": "string"
      },
      "frontendPort1": {
        "type": "int"
      },
      "backendPort1": {
        "type": "int"
      },
      "numInboundNATRules": {
        "type": "int"
      },
      "inboundNATRuleCakeshopStartingPort": {
        "type": "int"
      },
      "inboundNATRuleCakeshopBackendPort": {
        "type": "int"
      },
      "inboundNATRuleSSHStartingPort": {
        "type": "int"
      },
      "inboundNATRuleSSHBackendPort": {
        "type": "int"
      },

      "location": {
        "type": "string"
      }
    },
    "variables": {
      "apiVersionPublicIPAddresses": "2016-09-01",
      "apiVersionLoadBalanceInboundNATRules": "2016-09-01",
     
     
     
      "loadBalancerInboundNatRuleIDprefix": "[concat(variables('lbID'),'/inboundNatRules/',parameters('loadBalancerInboundNatRuleNamePrefix'))]"
    },
    "resources": [
      {
        "apiVersion": "2016-09-01",
        "name": "[parameters('lbSettings').loadBalancerName]",
        "type": "Microsoft.Network/loadBalancers",
        "location": "[parameters('lbSettings').location]",
        "properties": {
          "frontendIPConfigurations": [
            {
              "name": "[parameters('lbSettings').lbFrontEndIpConfigName]",
              "properties": {
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses/', parameters('lbSettings').publicIPAddressName)]"
                }
              }
            }
          ],
          "backendAddressPools": [
            {
              "name": "[parameters('lbSettings').loadBalancerBackendAddressPoolName]"
            }
          ],
          "loadBalancingRules": [
            {
              "name": "LB-Rule1",
              "properties": {
                "frontendIPConfiguration": {
                  "id": "[parameters('lbSettings').lbFrontEndIPConfigID]"
                },
                "backendAddressPool": {
                  "id": "[variables('lbBackendAddressPoolID')]"
                },
                "protocol": "Tcp",
                "frontendPort": "[parameters('FrontendPort1')]",
                "backendPort": "[parameters('BackendPort1')]",
                "enableFloatingIP": false,
                "idleTimeoutInMinutes": 5,
                "probe": {
                  "id": "[concat(variables('lbID'),'/probes/lbProbe1')]"
                }
              }
            }
          ],
          "probes": [
            {
              "name": "lbProbe1",
              "properties": {
                "protocol": "Tcp",
                "port": "[parameters('BackendPort1')]",
                "intervalInSeconds": 5,
                "numberOfProbes": 2
              }
            }
          ]
        }
      },
      {
        "apiVersion": "[variables('apiVersionLoadBalanceInboundNATRules')]",
        "type": "Microsoft.Network/loadBalancers/inboundNatRules",
        "name": "[concat(parameters('lbSettings').loadBalancerName, '/', parameters('loadBalancerInboundNatRuleNamePrefix'), 'cakeshop', copyIndex())]",
        "location": "[parameters('location')]",
        "copy": {
          "name": "lbNatLoop1",
          "count": "[parameters('numInboundNATRules')]"
        },
        "dependsOn": [
          "[concat('Microsoft.Network/loadBalancers/', parameters('lbSettings').loadBalancerName)]"
        ],
        "properties": {
          "frontendIPConfiguration": {
            "id": "[parameters('lbSettings').lbFrontEndIPConfigID]"
          },
          "protocol": "tcp",
          "frontendPort": "[copyIndex(parameters('inboundNATRuleCakeshopStartingPort'))]",
          "backendPort": "[parameters('inboundNATRuleCakeshopBackendPort')]",
          "enableFloatingIP": false
        }
      },
      {
        "apiVersion": "[variables('apiVersionLoadBalanceInboundNATRules')]",
        "type": "Microsoft.Network/loadBalancers/inboundNatRules",
        "name": "[concat(parameters('lbSettings').loadBalancerName, '/', parameters('loadBalancerInboundNatRuleNamePrefix'), 'ssh', copyIndex())]",
        "location": "[parameters('location')]",
        "copy": {
          "name": "lbNatLoop2",
          "count": "[parameters('numInboundNATRules')]"
        },
        "dependsOn": [
          "[concat('Microsoft.Network/loadBalancers/', parameters('lbSettings').loadBalancerName)]",
          "lbNatLoop1"
        ],
        "properties": {
          "frontendIPConfiguration": {
            "id": "[parameters('lbSettings').lbFrontEndIPConfigID]"
          },
          "protocol": "tcp",
          "frontendPort": "[copyIndex(parameters('inboundNATRuleSSHStartingPort'))]",
          "backendPort": "[parameters('inboundNATRuleSSHBackendPort')]",
          "enableFloatingIP": false
        }
      }
    ]
  }